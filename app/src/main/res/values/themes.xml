<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Momentum" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_color_grey</item>
        <item name="colorPrimaryVariant">@color/red_main</item>
        <item name="colorOnPrimary">@color/red_main</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_main</item>
        <item name="colorSecondaryVariant">@color/red_main</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- removes the default action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>